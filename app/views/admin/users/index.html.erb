<h2>Manage Users</h2>

<table class="table table-hover table-bordered mt-3">
  <thead class="table-dark">
    <tr class="text-center">
      <th>Email</th>
      <th>Role</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr class="text-center">
        <td><%= user.email %></td>

        <!-- Role Badge -->
        <td>
          <span class="badge <%= user.role == 'admin' ? 'bg-danger' : 'bg-primary' %>">
            <%= user.role&.capitalize || 'N/A' %>
          </span>
        </td>

        <!-- Status Badge -->
        <td>
          <span class="badge <%= user.status == 'active' ? 'bg-success' : 'bg-secondary' %>">
            <%= user.status&.capitalize || 'N/A' %>
          </span>
        </td>

        <!-- Actions -->
        <td class="d-flex justify-content-center gap-1">
          <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-sm btn-warning" %>
          <%= link_to "Delete", admin_user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


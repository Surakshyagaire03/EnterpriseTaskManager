<h2>New Task</h2>

<% if @task.errors.any? %>
  <div class="alert alert-danger">
    <h4>Errors:</h4>
    <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @task, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :due_date %>
    <%= f.date_field :due_date, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :assignee_id, "Assign To" %>
    <%= f.collection_select :assignee_id, User.where.not(id: current_user.id),
          :id, :email, { prompt: "Select a user" }, { class: "form-select", required: true } %>
  </div>

  <div class="mb-3">
    <%= f.submit "Create Task", class: "btn btn-success" %>
  </div>
<% end %>
